<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--配置servlet  server applet 指运行在服务器上的小程序-->
    <servlet>
        <servlet-name>demo01</servlet-name><!--定义一个名字 demo01-->
        <servlet-class>cn.web.servlet.Servlet_Practice</servlet-class><!--包的完整路径-->
    </servlet>
    <servlet-mapping>
        <servlet-name>demo01</servlet-name><!--与上面的对应-->
        <url-pattern>/demo01</url-pattern><!--这就是虚拟目录到时候直接/demo01 访问-->
    </servlet-mapping>
</web-app>